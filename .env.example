# SavvyDealsHub environment (.env)
# Copy this file to .env for local development.
# IMPORTANT: never commit real secrets. In AWS Amplify, set secrets in:
# App settings â†’ Environment variables

# Public site details
NEXT_PUBLIC_SITE_NAME=SavvyDealsHub
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# NextAuth (required for login)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=__GENERATE_A_LONG_RANDOM_STRING__

# Database (Neon Postgres)
# In Amplify: paste ONLY the URL value (no quotes).
DATABASE_URL=__PASTE_NEON_POOLED_URL_HERE__
DATABASE_URL_UNPOOLED=__PASTE_NEON_UNPOOLED_URL_HERE__

# Secure ingestion / cron keys (optional but recommended)
INGEST_SECRET=__GENERATE_RANDOM_STRING__
CRON_SECRET=__GENERATE_RANDOM_STRING__
# Use UptimeRobot (free) to hit these endpoints hourly:
#   https://YOUR_DOMAIN/api/cron/refresh?token=CRON_SECRET
# Optional health check monitor:
#   https://YOUR_DOMAIN/api/cron/health?token=CRON_SECRET

# Affiliate link wrapping (optional)
# If set, outbound product links are wrapped (legal affiliate tracking) without changing the product URL.
# Must contain either {{url}} (URL-encoded) OR {{urlRaw}}.
AFFILIATE_LINK_TEMPLATE=
AMAZON_ASSOC_TAG=savvydeals03d-21

# Ads / Analytics (loaded only AFTER cookie consent)
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-xxxxxxxxxxxxxxxx
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: email reports
REPORTS_TO=you@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Optional: external JSON deals feed (hourly refresh)
DEALS_FEED_URL=
